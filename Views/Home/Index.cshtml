@model IEnumerable<WebApplication1.Models.Question>

@{
    ViewBag.Title = "Index";

    

}

<h2>Index</h2>

<div>
    <form method="post" action="" name="initialForm">
        <table>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuestionText)
                    </td>
                    <td>

                    </td>
                    <td>
                        <input type="radio" name="@item.QuestionNumber" value=1 required/>Ja
                        <input type="radio" name="@item.QuestionNumber" value=0 />Nej
                    </td>
                </tr>
            }
        </table>
        <input type="submit" value="Skicka" name="submit" /> 
    </form>
    

    @if (ViewBag.Score != null)
    {
        @ViewBag.Score
    }


</div>